{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center esup">
        <h1 class="text-center">Changer votre mot de passe</h1>
    </div>
    {{ form_start(resetForm) }}


    {% for passwordField in resetForm.plainPassword %}
    <div class="row justify-content-center esup">
        <div class="col-3">
            {{ form_label(passwordField) }}
        </div>
        <div class="col-2">
            {{ form_widget(passwordField) }}
        </div>
    </div>


    {% endfor %}

    <div class="row justify-content-center esup">
        <button class="col-2 btn btn-primary">Modifier</button>
    </div>
    {{ form_end(resetForm) }}
</div>
{% endblock %}
