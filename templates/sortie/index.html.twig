{% extends 'base.html.twig' %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            if ("{{ sortie.villeAccueil.id }}" != -1) {
                updateLieux({{ sortie.villeAccueil.id }});
            }
            $('#sortie_villeAccueil').change((e) => {
                updateLieux(e.currentTarget.value);
            });
        });

        function updateLieux(villeSelectionnee) {
            if (!villeSelectionnee) {
                return;
            }
            let url = "{{ path('select_ville', {id: 'remplacerVilleID'}) }}";
            url = url.replace('remplacerVilleID', villeSelectionnee);
            fetch(url)
                .then(response => response.json())
                .then((sites) => {
                    console.log(sites);
                    $('#sortie_site').empty();
                    sites.forEach((element) => {
                        let site = document.createElement("option");
                        site.value = element[0];
                        site.innerText = element[1];
                        $('#sortie_site').append(site);
                        if ("{{ sortie.site.id }}" != -1 && "{{ sortie.site.id }}" == element[0]) {
                            site.setAttribute('selected', 'true');
                        }
                    });
                });
        }
    </script>
{% endblock %}

{% block title %}
    {% if sortie.id %}
        Modifier la sortie
    {% else %}
        Créer la sortie
    {% endif %}
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row esup">
            {% if sortie.id == "" %}
                <h2 class="text-center">Créer une sortie</h2>
            {% else %}
                <h2 class="text-center">Modifier une sortie</h2>
            {% endif %}
        </div>
        {% include '/errors.html.twig' %}
        {{ form_start(sortieForm) }}
        <div class="row justify-content-center">
            <div class="col-4">
                {% include 'sortie/rowForm.html.twig' with { 'form': sortieForm.nom } %}
                {% include 'sortie/rowForm.html.twig' with { 'form': sortieForm.dateSortie } %}
                {% include 'sortie/rowForm.html.twig' with { 'form': sortieForm.dateLimiteInscription } %}
                {% include 'sortie/rowForm.html.twig' with { 'form': sortieForm.nbPlaces } %}
                {% include 'sortie/rowForm.html.twig' with { 'form': sortieForm.duree } %}
                {% include 'sortie/rowForm.html.twig' with { 'form': sortieForm.description } %}
            </div>
            <div class="col-4">
                {% include 'sortie/rowForm.html.twig' with { 'form': sortieForm.villeOrganisatrice } %}
                {% include 'sortie/rowForm.html.twig' with { 'form': sortieForm.villeAccueil } %}
                {% include 'sortie/rowForm.html.twig' with { 'form': sortieForm.site } %}
            </div>
        </div>
        <div class="row-1 p-3 text-center">
            <button class="btn btn-outline-primary" name="button" value="enregistrer">Enregistrer</button>
            {% if sortie.publiee == false %}
                {% if sortie.id %}
                    <a class="btn btn-outline-success" role="button"
                       href="{{ path('publiee_sortie', {id: sortie.id}) }}">Publier
                        la sortie</a>
                    <a class="btn btn-outline-danger" role="button"
                       href="{{ path('supprimer_sortie', {id: sortie.id}) }}">Supprimer la sortie</a>
                {% else %}
                    <button class="btn btn-outline-success" name="button" value="publier">Publier la sortie</button>
                {% endif %}
            {% else %}
                <a class="btn btn-outline-danger" role="button" href="{{ path('annuler_sortie', {id: sortie.id}) }}">Annuler
                    la sortie</a>
            {% endif %}

            <a class="btn btn-outline-secondary" role="button" href="{{ path('home_page') }}">Retour</a>
        </div>
        {{ form_end(sortieForm) }}
    </div>
{% endblock %}
