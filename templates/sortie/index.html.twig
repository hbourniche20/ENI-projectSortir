{% extends 'base.html.twig' %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            if ("{{ villeId }}" != -1) {
                updateLieux({{ villeId }});
            }
            $('#sortie_villeAccueil').change((e) => {
                updateLieux(e.currentTarget.value);
            });
        });

        function updateLieux(villeSelectionnee) {
            let url = "{{ path('select_ville', {id: 'remplacerVilleID'}) }}";
            url = url.replace('remplacerVilleID', villeSelectionnee);
            fetch(url)
                .then(response => response.json())
                .then((sites) => {
                    console.log(sites);
                    $('#sortie_site').empty();
                    sites.forEach((element) => {
                        let site = document.createElement("option");
                        site.value = element[0];
                        site.innerText = element[1];
                        $('#sortie_site').append(site);
                        if ("{{ lieuId }}" != -1 && "{{ lieuId }}" == element[0]) {
                            site.setAttribute('selected', 'true');
                        }
                    });
                });
        }
    </script>
{% endblock %}

{% block title %}
    {% if sortieId == -1 %}
        Créer la sortie
    {% else %}
        Modifier la sortie
    {% endif %}
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row esup">
            {% if sortieId == -1 %}
                <h2 class="text-center">Créer une sortie</h2>
            {% else %}
                <h2 class="text-center">Modifier une sortie</h2>
            {% endif %}
        </div>
        {{ form_start(sortieForm) }}
        <div class="row justify-content-center esup">
            <div class="col-4">
                <div class="row form-group esup">
                    <div class="col-5">
                        {{ form_label(sortieForm.nom) }}
                    </div>
                    <div class="col-7">
                        {{ form_widget(sortieForm.nom) }}
                    </div>
                </div>
                <div class="row form-group esup">
                    <div class="col-5">
                        {{ form_label(sortieForm.dateSortie) }}
                    </div>
                    <div class="col-7">
                        {{ form_widget(sortieForm.dateSortie) }}
                    </div>
                </div>
                <div class="row form-group esup">
                    <div class="col-5">
                        {{ form_label(sortieForm.dateLimiteInscription) }}
                    </div>
                    <div class="col-7">
                        {{ form_widget(sortieForm.dateLimiteInscription) }}
                    </div>
                </div>
                <div class="row form-group esup">
                    <div class="col col-5">
                        {{ form_label(sortieForm.nbPlaces) }}
                    </div>
                    <div class="col col-7">
                        {{ form_widget(sortieForm.nbPlaces) }}
                    </div>
                    <div class="col error">
                        {{ form_errors(sortieForm.nbPlaces) }}
                    </div>
                </div>
                <div class="row form-group esup">
                    <div class="col-5">
                        {{ form_label(sortieForm.duree) }}
                    </div>
                    <div class="col-7">
                        <div class="row">
                            <div class="col col-3">
                                {{ form_widget(sortieForm.duree) }}
                            </div>
{#                            <div class="col col-3" style="pointer-events: none;">Minutes</div>#}
                        </div>
                    </div>
                    <div class="col error">
                        {{ form_errors(sortieForm.duree) }}
                    </div>
                </div>
                <div class="row form-group esup">
                    <div class="col-5">
                        {{ form_label(sortieForm.description) }}
                    </div>
                    <div class="col-7">
                        {{ form_widget(sortieForm.description) }}
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="row form-group esup">
                    <div class="col-5">
                        {{ form_label(sortieForm.villeOrganisatrice) }}
                    </div>
                    <div class="col-7">
                        {{ form_widget(sortieForm.villeOrganisatrice) }}
                    </div>
                </div>
                <div class="row form-group esup">
                    <div class="col-5">
                        {{ form_label(sortieForm.villeAccueil) }}
                    </div>
                    <div class="col-7">
                        {{ form_widget(sortieForm.villeAccueil) }}
                    </div>
                </div>
                <div class="row form-group esup drop-down">
                    <div class="col-5">
                        {{ form_label(sortieForm.site) }}
                    </div>
                    <div class="col-7">
                        {{ form_widget(sortieForm.site) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row-1 p-3 text-center">
            <button class="btn btn-outline-primary">Enregistrer</button>
            {% if true %}
                <button class="btn btn-outline-success">Publier la sortie</button>
            {% endif %}
            {% if sortieId != -1 %}
                <a class="btn btn-outline-danger" role="button"
                   href="{{ path('supprimer_sortie', {id: sortieId}) }}">Supprimer la sortie</a>
            {% endif %}
            <a class="btn btn-outline-secondary" role="button" href="{{ path('home_page') }}">Annuler</a>
        </div>
        {{ form_end(sortieForm) }}
    </div>
{% endblock %}
