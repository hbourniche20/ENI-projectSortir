{% extends 'base.html.twig' %}

{% block title %}Sortie{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center esup">
            <h1 class="text-center">Afficher une sortie</h1>
        </div>
        <div class="row justify-content-center esup">
            <div class="col">
                <div class="row">
                    <div class="col-4">
                        Nom de la sortie :
                    </div>
                    <div class="col-8">
                        {{ sortie.nom }}
                    </div>
                </div>
                <div class="row esup">
                    <div class="col-4">
                        Date et heure de la sortie :
                    </div>
                    <div class="col-8">
                        {{ sortie.dateSortie|date("H:i d/m/Y", "Europe/Paris") }}
                    </div>
                </div>
                <div class="row esup">
                    <div class="col-4">
                        Date limite d'inscription :
                    </div>
                    <div class="col-8">
                        {{ sortie.dateLimiteInscription|date("d/m/Y") }}
                    </div>
                </div>
                <div class="row esup">
                    <div class="col-4">
                        Nombre de places :
                    </div>
                    <div class="col-8">
                        {{ sortie.nbPlaces }}
                    </div>
                </div>
                <div class="row esup">
                    <div class="col-4">
                        Durée :
                    </div>
                    <div class="col-8">
                        {{ sortie.duree }} minute(s)
                    </div>
                </div>
                <div class="row esup">
                    <div class="col-4">
                        Description et infos :
                    </div>
                    <div class="col-8">
                        {{ sortie.description }}
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="row">
                    <div class="col-4">
                        Ville organisatrice :
                    </div>
                    <div class="col-8">
                        {{ sortie.villeOrganisatrice }}
                    </div>
                </div>
                <div class="row esup">
                    <div class="col-4">
                        Lieu :
                    </div>
                    <div class="col-8">
                        {{ sortie.villeAccueil.nom }}
                    </div>
                </div>
                <div class="row esup">
                    <div class="col-4">
                        Rue :
                    </div>
                    <div class="col-8">{{ sortie.site.rue }}</div>
                </div>
                <div class="row esup">
                    <div class="col-4">
                        Code postal :
                    </div>
                    <div class="col-8">{{ sortie.villeAccueil.codePostal }}</div>
                </div>
                <div class="row esup">
                    <div class="col-4">
                        Latitude :
                    </div>
                    <div class="col-8">A FAIRE !!!</div>
                </div>
                <div class="row esup">
                    <div class="col-4">
                        Longitude :
                    </div>
                    <div class="col-8">A FAIRE !!!</div>
                </div>
            </div>
        </div>
        <div class="row justify-content-start esup">
            <div class="col-4">
            <table class="table table-striped caption-top">
                <caption>Liste des inscrits à la sortie</caption>
                <thead>
                <tr class="table-primary">
                    <th class="text-center">Pseudo</th>
                    <th class="text-center">Prénom NOM</th>
                </tr>
                </thead>
                <tbody>
                {% for inscrit in inscrits %}
                    <tr>
                        <td class="text-center">{{ inscrit.pseudo }}</td>
                        <td class="text-center">{{ inscrit.prenom }} {{ inscrit.nom|upper }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            </div>
        </div>
    </div>
{% endblock %}