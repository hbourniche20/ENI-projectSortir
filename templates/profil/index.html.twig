{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1 class="text-center">
                {{ user.pseudo }}
            </h1>
        </div>
        <div class="row justify-content-center esup">
            <div class="col-3">
                {% if user.image is null %}
                    <img class="img-thumbnail" src="{{ asset('/css/200x200.png') }}" alt="Photo">
                {% else %}
                    <a href="{{ asset('/uploads/' ~ user.image.name) }}">
                        <img class="img-thumbnail" src="{{ asset('/uploads/' ~ user.image.name) }}" alt="Photo"
                             width="200" height="200">
                    </a>
                {% endif %}
            </div>
            <div class="col-6">
                {% include 'row.html.twig' with { 'label': 'Prénom :', 'value':  user.prenom } %}
                {% include 'row.html.twig' with { 'label': 'Nom :', 'value':  user.nom } %}
                {% include 'row.html.twig' with { 'label': 'Téléphone :', 'value':  user.tel } %}
                {% include 'row.html.twig' with { 'label': 'Email :', 'value':  user.email } %}
                {% include 'row.html.twig' with { 'label': 'Ville de rattachement :', 'value':  user.ville } %}
            </div>
        </div>
        <div class="row esup">
            <div class="text-center">
                {% if modifie %}
                    <a href="{{ path('profil_modif') }}" role="button" class="btn btn-outline-primary">Modifier</a>
                {% endif %}
                <a href="{{ path('home_page') }}" role="button" class="btn btn-outline-secondary">Retour</a>
            </div>
        </div>
    </div>
{% endblock %}
