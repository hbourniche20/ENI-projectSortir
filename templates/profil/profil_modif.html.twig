{% extends 'base.html.twig' %}

{% block title %}Modification du profil{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center esup">
            <h1 class="text-center">Mon profil</h1>
        </div>
        {% include '/errors.html.twig' %}
        <div class="row justify-content-center esup">
            <div class="col-3">
                {% if user.image is null %}
                    <img class="img-thumbnail" src="{{ asset('/css/200x200.png') }}" alt="Photo">
                {% else %}
                    <a href="{{ asset('/uploads/' ~ user.image.name) }}">
                        <img class="img-thumbnail" src="{{ asset('/uploads/' ~ user.image.name) }}" alt="Photo"
                             width="200" height="200">
                    </a>
                {% endif %}
            </div>
            <div class="col-6">
                {{ form_start(userForm) }}
                {% include 'rowForm.html.twig' with { 'form': userForm.pseudo } %}
                {% include 'rowForm.html.twig' with { 'form': userForm.prenom } %}
                {% include 'rowForm.html.twig' with { 'form': userForm.nom } %}
                {% include 'rowForm.html.twig' with { 'form': userForm.tel } %}
                {% include 'rowForm.html.twig' with { 'form': userForm.email } %}
                {% include 'rowForm.html.twig' with { 'form': userForm.password } %}
                {% include 'rowForm.html.twig' with { 'form': userForm.ville } %}
                {% include 'rowForm.html.twig' with { 'form': userForm.photo } %}

                <div class="row esup">
                    <div class="col">
                        <button class="btn btn-outline-success" type="submit">Enregistrer</button>
                        <a href="{{ path('app_forgot_password_request') }}" role="button" class="btn btn-outline-primary" >Changer de mot de passe</a>
                        <a href="{{ path('profil') }}" role="button" class="btn btn-outline-secondary">Retour</a>
                    </div>
                </div>
                {{ form_end(userForm) }}
            </div>
        </div>
    </div>
{% endblock %}