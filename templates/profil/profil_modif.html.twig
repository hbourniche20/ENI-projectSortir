{% extends 'base.html.twig' %}

{% block title %}Modification du profil{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center esup">
            <h1 class="text-center">Mon profil</h1>
        </div>
        <div class="row justify-content-center esup">
            <div class="col-3"></div>
            <div class="col-6">
                {% if userErrorsForm is not empty %}
                    <h3 style="color: red;">Erreur(s) : </h3>
                    <p style="color: red;">
                        {% for userError in userErrorsForm %}
                            {{ userError }} <br>
                        {% endfor %}
                    </p>
                {% endif %}
            </div>
        </div>
        <div class="row justify-content-center esup">
            <div class="col-3">
                {% if user.image is null %}
                    <img class="img-thumbnail" src="{{ asset('/css/200x200.png') }}" alt="Photo">
                {% else %}
                    <a href="{{ asset('/uploads/' ~ user.image.name) }}">
                        <img class="img-thumbnail" src="{{ asset('/uploads/' ~ user.image.name) }}" alt="Photo"
                             width="200" height="200">
                    </a>
                {% endif %}
            </div>
            <div class="col-6">
                {{ form_start(userForm) }}
                <div class="row">
                    <div class="col">
                        {{ form_label(userForm.pseudo) }}
                    </div>
                    <div class="col">
                        {{ form_widget(userForm.pseudo) }}
                    </div>
                </div>

                <div class="row esup">
                    <div class="col">
                        {{ form_label(userForm.prenom) }}
                    </div>
                    <div class="col">
                        {{ form_widget(userForm.prenom) }}
                    </div>
                </div>

                <div class="row esup">
                    <div class="col">
                        {{ form_label(userForm.nom) }}
                    </div>
                    <div class="col">
                        {{ form_widget(userForm.nom) }}
                    </div>
                </div>

                <div class="row esup">
                    <div class="col">
                        {{ form_label(userForm.tel) }}
                    </div>
                    <div class="col">
                        {{ form_widget(userForm.tel) }}
                    </div>
                </div>

                <div class="row esup">
                    <div class="col">
                        {{ form_label(userForm.email) }}
                    </div>
                    <div class="col">
                        {{ form_widget(userForm.email) }}
                    </div>
                </div>

                <div class="row esup">
                    <div class="col">
                        {{ form_label(userForm.plainPassword, 'Password') }}
                    </div>
                    <div class="col">
                        {{ form_widget(userForm.plainPassword) }}
                    </div>
                </div>

                <div class="row esup">
                    <div class="col">
                        {{ form_label(userForm.confirmation) }}
                    </div>
                    <div class="col">
                        {{ form_widget(userForm.confirmation) }}
                    </div>
                </div>

                <div class="row esup">
                    <div class="col">
                        {{ form_label(userForm.ville) }}
                    </div>
                    <div class="col">
                        {{ form_widget(userForm.ville) }}
                    </div>
                </div>

                <div class="row esup">
                    <div class="col">
                        {{ form_label(userForm.photo) }}
                    </div>
                    <div class="col">
                        {{ form_widget(userForm.photo) }}
                    </div>
                </div>

                <div class="row esup">
                    <div class="col">
                        <div class="text-center">
                            <button class="btn btn-danger" type="submit">Enregistrer</button>
                        </div>
                    </div>
                    <div class="col">
                        <a href="{{ path('profil') }}" role="button" class="btn btn-primary">Annuler</a>
                    </div>
                </div>
                {{ form_end(userForm) }}
            </div>
        </div>
    </div>
{% endblock %}